<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Quản lý sản phẩm</h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb justify-content-end">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Trang chủ </a></li>
                <li class="breadcrumb-item active">Thêm bài viết</li>
            </ol>
        </div>
    </div>
</div>
<style>
    #insert_data {
       background-color: aquamarine;
   }
    .avatar{
       max-width: 80px;
   }
</style>
<div class="row" id="insert_data">
   <div class="col-12">
       <div class="card">
           <div class="card-body">
               <h4 class="card-title">Thêm bài viết mới</h4>
               <h6 class="card-subtitle">Hãy cân nhắc kĩ lưỡng khi thêm một sản phẩm mới</h6>
               
                   <form class="m-t-40" novalidate>
                       <div class="row">
                           <div class="col-6">
                               <div class="form-group">
                                   <h5>Tên bài viết<span class="text-danger">*</span></h5>
                                   <div class="controls">
                                       <input id="txtname" type="text" name="text" class="form-control" required data-validation-required-message="This field is required"> </div>
                                   <div class="form-control-feedback"><small>Add <code>required</code> attribute to field for required validation.</small></div>
                               </div>
                           </div>
                           <div class="col-6">
                               <div class="form-group">
                                   <h5>Chủ đề <span class="text-danger">*</span></h5>
                                   <div class="controls">
                                       <select name="select" id="select_categories" required class="form-select">
                                           <option value="-1">Các chủ đề</option>
                                       </select>
                                   </div>
                               </div>
                           </div>

                           <div class="col-6">
                               <div class="form-group">
                                   <h5> Ảnh bài viết<span class="text-danger">*</span></h5>
                                   <input type="file" id="txtFileImage" class="form-control">
                                   <small class="text-body-secondary">
                                       <img id="imgProduct" class="avatar" src="./upload/default2.png" alt="">
                                       <input type="hidden" id="hid_avt" value="default2.png">
                                       <input type="button" id="btnUploadImage" value="Done!!">
                                   </small>
                               </div>
                           </div>

                           <div class="col-6">
                               <div class="form-group">
                                   <h5>Mô tả <span class="text-danger">*</span></h5>
                                   <div class="controls">
                                       <textarea name="textarea" id="textarea" class="form-control" required placeholder="nội dung sản phẩm"></textarea>
                                   </div>
                               </div>
                           </div>
                       <div class="row">
                           <div class="col-md-4">
                               <div class="form-group">
                                   <h5>Xác nhận các điều khoản của shop <span class="text-danger">*</span></h5>
                                   <div class="controls">
                                       <div class="form-check">
                                           <input type="checkbox" required value="single" class="form-check-input" id="customCheck1">
                                           <label class="form-check-label" for="customCheck1">Tôi đồng ý các điều khoản của shop!!</label>
                                       </div>
                                   </div>
                               </div>
                           </div>
                       </div>

                       <div class="text-xs-right">
                           <button type="button" id="btnSubmit_addArticle" class="btn btn-info text-white">Nộp</button>
                           <button type="reset" class="btn btn-inverse">Hủy</button>
                       </div>
                   </div>
                   </form>
               
           </div>
       </div>
   </div>
</div>